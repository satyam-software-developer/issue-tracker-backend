<div class="container my-5 py-5">
    <!-- Check if there are projects available -->
    <% if (projects && projects.length > 0) { %>
    <!-- Loop through each project -->
    <% for (let project of projects) { %>
    <div class="card mb-4 w-75 mx-auto shadow-lg"
        style="background: linear-gradient(to right, #00b4d8, #0077b6); border: none; border-radius: 15px;">
        <!-- Card Header: Displays the project name -->
        <div class="card-header"
            style="background-color: #023e8a; color: #ffffff; font-size: 1.3rem; font-weight: bold; border-radius: 8px;">
            <strong>Project Name:</strong> <%= project.name %>
        </div>

        <!-- Card Body: Displays project details -->
        <div class="card-body" style="color: #1d3557; line-height: 1.7;">
            <!-- Author of the project -->
            <h6 class="card-subtitle mb-3"
                style="color: #ae35a8d1; font-weight: bold;">
                <strong>Author:</strong> <%= project.author %>
            </h6>
            <!-- Project Description -->
            <p class="card-text" style="font-size: 1rem;">
                <strong>Description:</strong> <%= project.description %>
            </p>

            <!-- Action Button: Link to open the project -->
            <div class="text-end">
                <a href="/project/<%= project._id %>"
                    class="btn btn-primary shadow-lg"
                    style="background-color: #2a9d8f; border: none; font-weight: bold; padding: 10px 20px; font-size: 1rem;">
                    Open Project
                </a>
            </div>
        </div>
    </div>
    <% } %>
    <% } else { %>
    <!-- Fallback Message: Displayed if there are no projects -->
    <div class="text-center">
        <p class="text-muted fs-5" style="color: #6c757d;">No projects
            available. Start by creating one!</p>
    </div>
    <% } %>
</div>
