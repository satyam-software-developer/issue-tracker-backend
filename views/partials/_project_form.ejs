<!-- Button trigger modal -->
<button
    type="button"
    class="btn m-auto btn-success"
    data-bs-toggle="modal"
    data-bs-target="#exampleModal">
    Create New Project
</button>

<!-- Modal -->
<div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content"
            style="background-color: #ffffff; color: #333;">
            <div class="modal-header"
                style="background-color: #FF5733; color: #ffffff;">
                <!-- Modal Header: Title and close button -->
                <h5 class="modal-title" id="exampleModalLabel">Create a new
                    project</h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <!-- Form for creating a new project -->
            <form
                class="border border-light border-3"
                action="/project/create"
                method="POST">

                <!-- Project Name Input Field -->
                <div class="row mb-3 m-auto">
                    <label for="namelabel"
                        class="col-sm-4 col-form-label"
                        style="color: #2c3e50;">Name</label>
                    <div class="col-sm-8">
                        <input
                            type="text"
                            name="name"
                            placeholder="Name of your project"
                            required
                            class="form-control"
                            id="namelabel"
                            style="background-color: #f0f0f0; color: #333;" />
                    </div>
                </div>

                <!-- Project Description Input Field -->
                <div class="row mb-3 m-auto">
                    <label for="inputPassword3"
                        class="col-sm-4 col-form-label"
                        style="color: #2c3e50;">Description</label>
                    <div class="col-sm-8">
                        <textarea
                            name="description"
                            placeholder="Write something about your project..."
                            required
                            class="form-control"
                            id="inputPassword3"
                            style="background-color: #f0f0f0; color: #333; height: 100px;"></textarea>
                    </div>
                </div>

                <!-- Project Author Input Field -->
                <div class="row mb-3 m-auto">
                    <label for="authorlabel"
                        class="col-sm-4 col-form-label"
                        style="color: #2c3e50;">Author</label>
                    <div class="col-sm-8">
                        <input
                            type="text"
                            name="author"
                            placeholder="Author"
                            required
                            class="form-control"
                            id="authorlabel"
                            style="background-color: #f0f0f0; color: #333;" />
                    </div>
                </div>

                <!-- Modal Footer: Close and Submit Buttons -->
                <div class="modal-footer" style="background-color: #f1f2f6;">
                    <!-- Close Button -->
                    <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                        style="background-color: #6c757d; color: #ffffff;">
                        Close
                    </button>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary"
                        style="background-color: #28a745; border-color: #28a745; color: #ffffff;">
                        Create project
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
